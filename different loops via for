// 7. Write join
In the given array, write join using a for loop.

function data(arr, separator) {
    let result = '';

    for (let i = 0; i < arr.length; i++) {
        result = result + arr[i].toString();
        if (i < arr.length - 1) {
            result = result + separator;
        }
    }

    return result;
}

const array = [5, 21, 5, 487, 254, 32, 67];
const separator = ('-');
const array2 = data(array, separator);
console.log(array2);


//5-21-5-487-254-32-67
